<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:shadowColor="@color/black"
        android:elevation="@dimen/_2sdp"
        android:id="@+id/cnnt"

        android:layout_height="wrap_content"

        >




        <androidx.cardview.widget.CardView
            android:id="@+id/c1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:shadowRadius="22"
            app:cardCornerRadius="@dimen/_20sdp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c22"
                android:background="#BDCEF8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager_recycler"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_200sdp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="290dp"
                    android:background="#9C27B0"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:elevation="@dimen/_20sdp"
                    android:id="@+id/newone"
                    android:padding="@dimen/_2sdp"
                    android:rotation="40"
                    android:text="New"
                    android:textColor="@color/white"

                    android:textSize="@dimen/_13sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:id="@+id/favorete"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:background="@drawable/stily_item_recycler"
                    android:contentDescription="TODO"

                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_favorte_svg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_pager_recycler"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />

                <ImageView
                    android:id="@+id/Image_price"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_13sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:src="@drawable/ic_price_check"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_pager_recycler"
                    app:layout_constraintTop_toBottomOf="@id/favorete"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/textprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:padding="@dimen/_2sdp"
                    android:text=""
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_pager_recycler"
                    app:layout_constraintTop_toBottomOf="@id/Image_price" />

                <ImageView
                    android:id="@+id/storge"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:src="@drawable/ic_storage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_pager_recycler"
                    app:layout_constraintTop_toBottomOf="@id/textprice" />

                <TextView
                    android:id="@+id/textstorge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_1sdp"
                    android:padding="@dimen/_4sdp"
                    android:text=""
                    android:textAllCaps="false"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/view_pager_recycler"
                    app:layout_constraintTop_toBottomOf="@id/storge" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout

            android:id="@+id/linercolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_180sdp"
            android:background="@drawable/stily_item_recycler"
            android:elevation="@dimen/_2sdp"

            android:gravity="center"
            android:padding="@dimen/_5sdp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:background="@drawable/tem_animtion"
                android:layout_width="@dimen/_40sdp"
                android:id="@+id/open"
                android:layout_height="@dimen/_40sdp"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/ic_add" />


            <ImageView
                android:visibility="gone"
                android:id="@+id/red"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/back_grund_buttom_recycler_red"

                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/green"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:src="@drawable/back_grund_buttom_recycler_green"
                tools:ignore="ImageContrastCheck" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/banfsgey"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:background="@drawable/back_grund_buttom_recycler"

                />

        </LinearLayout>


























        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=""
            android:textColor="#050505"
            android:padding="@dimen/_2sdp"
            android:textStyle="bold"
            android:id="@+id/name_prodect"
            app:layout_constraintTop_toBottomOf="@id/linercolar"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </layout>