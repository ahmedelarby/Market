<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:id="@+id/cnnt"
        android:background="@drawable/styilytextitemrecyclerchoose"

        android:layout_height="wrap_content"

        >


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:backgroundTint="#B3BEFA"
            android:padding="@dimen/_3sdp"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="@dimen/_5sdp"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c22"
                android:padding="@dimen/_5sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back_grund_animtion"

                >


                <ImageView
                    android:id="@+id/view_pager_recycler"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_130sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/favorete"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:background="@drawable/stily_item_recycler"
                    android:contentDescription="TODO"

                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_favorte_svg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ImageContrastCheck" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout

            android:id="@+id/linercolar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_110sdp"
            android:background="@drawable/stily_item_recycler"
            android:elevation="@dimen/_10sdp"

            android:gravity="center"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
<com.google.android.material.button.MaterialButton
    android:layout_width="@dimen/_85sdp"
    android:layout_height="@dimen/_40sdp"
    android:text="Go"
    app:backgroundTint="@null"
    app:backgroundTintMode="add"
    android:textAllCaps="false"
    android:textStyle="bold"
    android:gravity="center"
    android:textColor="@android:color/black"
    android:background="@drawable/tem_animtion"
    android:textSize="@dimen/_20sdp"/>



        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="NameShop"
            android:textColor="#050505"
            android:padding="@dimen/_1sdp"
            android:textStyle="bold"
            android:fontFamily="@font/uber_move_bold"
            android:id="@+id/name_shop"
            android:layout_marginStart="@dimen/_5sdp"

            app:layout_constraintTop_toBottomOf="@id/linercolar"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:fontFamily="@font/uber_move_bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="Type Shop"
            android:textColor="#050505"
            android:padding="@dimen/_2sdp"
            android:textStyle="bold"
            android:id="@+id/type_shop"
            android:layout_marginStart="@dimen/_5sdp"

            app:layout_constraintTop_toBottomOf="@id/name_shop"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="NameShop"
            android:textColor="#050505"
            android:padding="@dimen/_2sdp"
            android:textStyle="bold"
            android:fontFamily="@font/uber_move_bold"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/location_shop"
            app:layout_constraintTop_toBottomOf="@id/type_shop"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>