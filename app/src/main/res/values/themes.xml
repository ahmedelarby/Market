        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryVariant">#334443</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
